<div class="col-md-6 offset-2">
  <h1><%= t "page.update_subject" %></h1>
  <%= form_for [:supervisors, @subject] do |f| %>
  <%= render "layouts/shared/error_message", object: f.object %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-4 form-control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-4 form-control-label" %>
    <div class="col-sm-8">
      <%= f.text_area(:description, size: '76x5') %>
    </div>
  </div>
  <div class="form-group">
    <%= f.file_field :picture, accept: "image/jpeg, image/gif, image/png, image/jpg" %>
  </div>
  <div class="form-group" id="tasks">
    <h3>Tasks:</h3>
    <span class="fa fa-plus" id="more_task"></span>
    <% @subject.tasks.each do |task| %>
      <span class="btn badge badge-warning task" id="<%= task.id %>"><%= task.name %></span>
    <% end %>
  </div>
  <div class="col-md-6 form-group">
    <%= f.submit class: "form-control btn btn-success" %>
  </div>
  <% end %>
</div>
<%= javascript_include_tag "supervisors/subjects" %>
